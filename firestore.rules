rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: identify admin
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email == "admin@leadcrm.com";
    }

    // -----------------------------
    // LEADS
    // -----------------------------
    match /leads/{leadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;   // CRM + App can add/edit/delete
    }

    // -----------------------------
    // ATTENDANCE (App + CRM)
    // -----------------------------
    match /attendance/{attendanceId} {
      allow read: if request.auth != null;

      // App writes user_id, punch_in_time, selfie, geo
      // CRM writes punch-in/out manual updates
      allow write: if request.auth != null; 
    }

    // -----------------------------
    // USERS (Agents + Admin)
    // -----------------------------
    match /users/{userId} {
      // CRM & App can read all users
      allow read: if request.auth != null;

      // ADMIN can create or delete subusers
      allow create: if isAdmin();
      allow delete: if isAdmin();

      // ADMIN can update any user
      allow update: if isAdmin();

      // Subuser can only update THEIR OWN basic profile (not role, not password)
      allow update: if request.auth != null
                 && request.auth.uid == userId
                 && !(("role" in request.resource.data) || ("password" in request.resource.data));
    }

    // -----------------------------
    // ADMIN SETTINGS
    // -----------------------------
    match /admin/{docId} {
      allow read, write: if isAdmin();
    }

    // -----------------------------
    // DENY everything else
    // -----------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}